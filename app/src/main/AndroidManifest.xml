<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smile.androidsong">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AndroidSongApp"
        android:allowBackup="true"
        android:icon="@drawable/smile"
        android:label="@string/app_name"
        android:theme="@style/AppThemeTextSizeSmall">
        <activity
            android:name=".MyActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_song_query"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SingersListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_singer_query"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SingerTypesListActivity_OLD"
            android:configChanges="orientation"
            android:label="@string/title_activity_singer_type_query"
            android:screenOrientation="portrait" />
        <activity
            android:name=".OrderOneSong"
            android:configChanges="orientation"
            android:label="@string/title_activity_order_one_song"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LanguagesListActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_language_query"
            android:screenOrientation="portrait" />
        <activity android:name=".SingerTypesListActivity" />
        <activity android:name=".WordsListActivity"></activity>
    </application>

</manifest>