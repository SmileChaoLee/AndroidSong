<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smile.androidsong" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/smile"
        android:label="@string/app_name"
        android:theme="@style/AppThemeTextSizeSmall" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SongsListActivity"
            android:label="@string/title_activity_song_query" >
        </activity>
        <activity
            android:name=".SingersListActivity"
            android:label="@string/title_activity_singer_query" >
        </activity>
        <activity
            android:name=".SingerTypesListActivity"
            android:label="@string/title_activity_singer_type_query">
        </activity>
        <activity
            android:name=".OrderOneSong"
            android:label="@string/title_activity_order_one_song" >
        </activity>
        <activity
            android:name=".LanguagesListActivity"
            android:label="@string/title_activity_language_query" >
        </activity>
    </application>

</manifest>
